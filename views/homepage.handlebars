<section class="rows-col-1 rows cols-lg-2">
    {{#each posts as |post|}}
    <div class="col">
        <article class="card">
            <div class="card-body">
                <h3 class="card-title">{{post.title}}</h3>
                <p>{{post.post_text}}</p>
                |
                <a href="/post/{{id}}" class="card-link">{{post.comments.length}} comment(s)</a>
            </div>
        </article>
    </div>
    {{/each}}
</section>