<div class="card-group col-6">
    <div class="card">
        <div class="card-body">
            <h3 class="edit-header">Edit Post</h3>
            <form class="card-body edit-post-form">
                <div>
                    <label for="post-title" class="form-label">Title</label>
                    <input name="post-title" type="text" value="{{post.title}}" class="form-control"id="edit-text"/>
                </div>
                <div>
                    <label class="form-label" for="content">Content</label>
                    <input name="content" type="text" value="{{post.content}}" class="form-control" id="edit-text" />
                </div>
                <div> <hr> </div>
                <div>
                    <button type="button" class="delete-post-btn button">Delete Post</button>
                    <button type="submit" class="button">Update Post</button>
                </div>
            </form>
        </div>
    </div>
</div>

