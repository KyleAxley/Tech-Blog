<div class="card-group col-6">
    <div class="card">
        <div class="card-body">
            <h3 class="edit-header">Edit Post</h3>
            <form id="edit-post-form">
                <div>
                    <label for="post-title" class="form-label">Title</label>
                    <input name="post-title" type="text" class="form-control"id="post-title" value="{{post.title}}" />
                </div>
                <div>
                    <label class="form-label" for="post-content">Content</label>
                    <textarea name="post-content" id="post-content" class="form-control">{{post.post_text}}</textarea>
                </div>
                <div>
                    <button type="submit" class="button" id="edit-post">Update Post</button>
                    <button type="button" class="delete-post-btn button">Delete Post</button>
                </div>
            </form>
        </div>
    </div>
</div>

<section class="container mx-auto">
    {{> comments}}
</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>