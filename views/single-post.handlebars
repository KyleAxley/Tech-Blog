<section class="card-group col-6">
    <div class="card">
        <div class="card-body mb-3" id="post-title">
            <div class="post-info">
                <h2 class="post-title">{{post.title}}</h2>
                <h3 class="created-at">{{post.created_at}} by {{post.user.username}}</h3>
            </div>
            <div class="post-text">
                {{post.post_text}}
            </div>
        </div>
    </div>
</section>
{{> comments}}



