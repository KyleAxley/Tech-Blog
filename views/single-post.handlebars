<div class="card-group col-6">
    <div class="card">
        <div class="card-body">
            <section class="container-fluid"></section>
                <div class="post-info">
                    <h2 class="post-title">{{post.title}}</h2>
                    <h3 class="created-at">{{post.created_at}} by {{post.user.username}}</h3>
                    <div class="separator"><hr></div>
                </div>
                <div class="post-text">
                    {{post.post_text}}
                    <div class="separator"></div>
                </div>
            </section>
        </div>
    </div>
</div>
<div class="separator"><hr></div>

<section class="container-fluid mb-3" id="comment-box">
    <div class="row">
        <div class="col col-md-6">
            {{#if loggedIn}}
            <form class="comment-form">
                <div class="mb-3">
                    <textarea name="comment-body" id="comment-body" rows="3" class="form-control"></textarea>
                    <button type="submit" id="button">add comment</button>
                </div>
            </form>
            {{/if}}
            <div class="comments mt-3" id="comment-section">
                <ul class="list-group">
            {{#each post.comments as |comment|}}
                <li class="list-group-item">
                    <p class="comment-text">{{comment.comment_text}}</p>
                    <small>{{comment.created_at}} by {{comment.user.username}}</small>
                </li>
            {{/each}}
                </ul>
            </div>
        </div>
    </div>
</section>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}